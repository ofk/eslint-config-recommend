{
  "name": "@ofk/eslint-config-recommend",
  "description": "eslint config with typescript and prettier support",
  "license": "MIT",
  "author": "ofk <ofkjpn+npm@gmail.com> (https://github.com/ofk/)",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "format": "run-s format:*",
    "format:files": "prettier --write \"**/*.{json,md}\"",
    "format:package-json": "prettier-package-json --write",
    "test": "eslint --ext .js test"
  },
  "dependencies": {
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4"
  },
  "devDependencies": {
    "eslint": "7.6.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "prettier-package-json": "2.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": "prettier --write",
    "package.json": [
      "prettier --write",
      "npm run format:package-json"
    ]
  }
}
